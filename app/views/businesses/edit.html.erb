<%= form_with model: @business do |f| %>
  <div class="form-group">
    <%= label_tag(:name, 'Name') %>
    <%= f.text_field :name, class: 'form-control' %>
    <small id="nameHelp" class="form-text text-muted">Update the businesses name</small>
  </div>
  <div class="form-group">
    <%= label_tag(:logo, 'Logo') %>
    <% if @business.logo.attached? %>
      <%= image_tag @business.logo, class: 'rounded mx-auto d-block img-thumbnail' %>
    <% end %>
    <%= f.file_field :logo, accept: 'image/png,image/gif,image/jpeg' %>
  </div>
  <%= f.submit 'Update Business', class: 'btn btn-northcenter' %>
  <%= link_to "Delete Business", business_path(@business), method: :delete, data: { confirm: "You sure?" } %>
<% end %>
