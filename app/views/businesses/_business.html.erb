<div class="form-group">
  <%= label_tag(:name, 'Name') %>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= label_tag(:address_1, 'Address 1') %>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= label_tag(:address_2, 'Address 2') %>
  <%= f.text_field :address_2, class: 'form-control' %>
</div>

<div class="form-group">
  <%= label_tag(:city, 'City') %>
  <%= f.text_field :city, class: 'form-control' %>
</div>

<div class="form-group">
  <%= label_tag(:state, 'State') %>
  <%= f.text_field :state, class: 'form-control' %>
</div>

<div class="form-group">
  <%= label_tag(:zip, 'Zipcode') %>
  <%= f.text_field :zip, class: 'form-control' %>
</div>

<div class="form-group">
  <%= label_tag(:phone, 'Zipcode') %>
  <%= f.text_field :phone, class: 'form-control' %>
</div>

<div class="form-group">
  <%= label_tag(:logo, 'Logo') %>
  <% if @business.logo.attached? %>
    <%= image_tag @business.logo, class: 'rounded mx-auto d-block img-thumbnail' %>
  <% end %>
  <%= f.file_field :logo, accept: 'image/png,image/gif,image/jpeg' %>
</div>
