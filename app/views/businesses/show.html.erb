<% if current_admin %>
  <p class="float-right"><%= link_to '+ add a coupon', new_business_coupon_path(@business) %></p>
<% end %>

<% if @business.logo.attached? %>
  <%= image_tag @business.logo, class: 'rounded mx-auto d-block img-thumbnail' %>
<% end %>
<h2><%= @business.name %></h2>

<% if current_admin %>
  <%= link_to 'Edit', edit_business_path(@business) %>
<% end %>

<% @coupons.each do |coupon| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= coupon.name %></h5>
      <p class="card-text"><%= coupon.description %></p>
      <%= link_to 'Use Coupon', coupon_path(coupon), class: 'btn btn-northcenter' %>
    </div>
  </div>
<% end %>

